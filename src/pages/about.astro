---
import BaseLayout from "../layouts/BaseLayout.astro";
const allPost = await Astro.glob("./posts/*.md");
const content = "abc";
---

<BaseLayout title="About">
    <h1>About</h1>
    <p>{content}</p>
    <ul>
        {
            allPost.map((post) => (
                <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
